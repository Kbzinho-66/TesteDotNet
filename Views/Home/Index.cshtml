@model IEnumerable<Hello.Models.Serie>

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Ó céus, que série assistir?</h1>

    @foreach (var serie in Model)
    {
        // TODO Melhorar isso
        <ul>
            <li>@Html.DisplayFor(item => serie.nome)</li>
        </ul>
    }

    <form class="row justify-content-center g-3">
        <div class="col-md-4">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome">
        </div>
        
        <div class="col-md-2">
            <label for="interesse" class="form-label">Interesse</label>
            <input type="range" class="form-control" id="interesse" name="interesse" min=-1 max=1>
        </div>

        @* TODO Desativar o botão se o nome tiver vazio *@
        <div class="col-12">
            <button type="submit" id="btn-add" class="btn btn-secondary col-1">Adicionar</button>
            <button type="button" class="btn btn-success col-1">Escolher</button>
        </div>
    </form>
</div>
