@{
    ViewData["Title"] = "API";
}

<div class="text-center">
    <h1 class="display-4 mb-3">O que fazer da vida?</h1>

    <div class="row">
        <div class="mx-auto col-3">
            <form asp-action="Procura">
                <div class="form-group">
                    <label for="dificuldade">Dificuldade</label>
                    <input type="number" class="form-control" id="dificuldade" name="dificuldade" min="0.0" max="1.0"
                        step="0.05" value="0.25">
                </div>

                <div class="form-group">
                    <label for="tipo">Tipo</label>
                    <select name="tipo" class="form-select">
                        <option value="0">Educativa</option>
                        <option value="1">Divertida</option>
                        <option value="2">Social</option>
                        <option value="3">Gambiarra</option>
                        <option value="4">Caridade</option>
                        <option value="5">Cozinha</option>
                        <option value="6">Relaxante</option>
                        <option value="7">Música</option>
                        <option value="8">Mata Tempo</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="participantes">Participantes</label>
                    <input type="number" class="form-control" id="participantes" name="participantes" min="0" value="1">
                </div>

                <button asp-controller="Api" asp-action="Procura" class="btn btn-primary mt-4">Procurar</button>
            </form>
        </div>

    </div>

</div>



